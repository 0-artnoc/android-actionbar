<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.markupartist.android.actionbar.example"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <!-- Demonstrates how the action bar can be styled differently from another
         another action bar within the same project. -->
    <com.markupartist.android.widget.ActionBar
        android:id="@+id/actionbar"
        app:title="@string/some_title"
        app:actionBarBackground="@drawable/other_actionbar_background"
        app:actionBarItemBackground="@drawable/other_actionbar_item_btn"
        app:actionBarSeparator="@color/other_actionbar_separator"
        style="@style/ActionBar"
        />
    <TextView
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="@string/other_content"
        />
</LinearLayout>
